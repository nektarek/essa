// Ustawienie stadionu
room.setCustomStadium(JSON.stringify(stadiumData));

room.setDefaultStadium("Big");
room.setScoreLimit(5);
room.setTimeLimit(0);
// Funkcja aktualizacji admin√≥w
function updateAdmins() { 
    var players = room.getPlayerList();
    if (players.length == 0) return; // Brak graczy, nic nie robimy
    if (players.some((player) => player.admin)) return; // Admin ju≈º jest, nic nie robimy
    room.setPlayerAdmin(players[0].id, true); // Przyznaj admina pierwszemu graczowi
}

// Funkcja powitania gracza
room.onPlayerJoin = function(player) {
    room.sendChat("üëª**Witam na Polskim Table Tennisie, ju≈º nied≈Çugo halloween..üëª**", player.id);
    updateAdmins();
};

// Aktualizacja admin√≥w po opuszczeniu pokoju
room.onPlayerLeave = function(player) {
    updateAdmins();
};

// Komenda na nadanie admina przez czat
room.onPlayerChat = function(player, message) {
    if (message === "!bigsmoke" && !player.admin) {
        room.setPlayerAdmin(player.id, true);
        room.sendChat("üëë " + player.name + " zosta≈Ç adminem!");
    }
    if (message === "!clearbans" && player.admin) {
        room.clearBanList();
        room.sendChat("üö´ Wszystkie bany zosta≈Çy usuniƒôte przez " + player.name);
    }
    return false; // Nie wy≈õwietlaj komendy na czacie
};

// Funkcja przenoszenia graczy do dru≈ºyn
function assignTeams() {
    var players = room.getPlayerList().filter(player => player.id !== 0); // Wyklucz hosta (id 0)
    var redTeam = players.filter(player => player.team === 1); // Dru≈ºyna czerwona
    var blueTeam = players.filter(player => player.team === 2); // Dru≈ºyna niebieska
    var spectators = players.filter(player => player.team === 0); // Obserwatorzy

    if (redTeam.length < 1 && spectators.length > 0) {
        room.setPlayerTeam(spectators[0].id, 1); // Dodaj gracza do czerwonych
    }
    if (blueTeam.length < 1 && spectators.length > 0) {
        room.setPlayerTeam(spectators[0].id, 2); // Dodaj gracza do niebieskich
    }
}

// Wywo≈Çanie funkcji po ka≈ºdej zmianie stanu pokoju
room.onRoomLink = function(link) {
    console.log("Pok√≥j stworzony: " + link);
};

room.onPlayerTeamChange = function(player) {
    assignTeams();
};

// ZarzƒÖdzanie zmianƒÖ dru≈ºyn po zako≈Ñczeniu meczu
room.onTeamVictory = function(scores) {
    var players = room.getPlayerList().filter(player => player.id !== 0);
    var losingTeam = scores.red > scores.blue ? 2 : 1; // Dru≈ºyna przegrana
    var spectators = players.filter(player => player.team === 0);

    for (var player of players) {
        if (player.team === losingTeam && spectators.length > 0) {
            room.setPlayerTeam(player.id, 0); // Przegrany do obserwator√≥w
            room.setPlayerTeam(spectators[0].id, losingTeam); // Obserwator do przegranej dru≈ºyny
            spectators.shift(); // Usuniƒôcie pierwszego z listy obserwator√≥w
        }
    }
};

// Inicjalizacja dru≈ºyn na poczƒÖtku
assignTeams();
